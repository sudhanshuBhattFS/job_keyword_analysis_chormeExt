{
    "name": "Job Keyword Analyzer",
    "description": "Analyze job listings to extract and highlight key skills and keywords for better resume targeting.",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": ["cookies", "activeTab", "storage", "tabs"],
    "incognito": "split",
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_end",
            "all_frames": false,
            "js": ["js/content_bundle.min.js"],
            "css": []
        }
    ],
    "background": {
        "service_worker": "js/background_bundle.min.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["styles/*", "icons/*", "lib/*"],
            "matches": ["*://*/*"]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    }
}
