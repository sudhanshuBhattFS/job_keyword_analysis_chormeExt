{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["gulpfile.ts", "tasks/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}